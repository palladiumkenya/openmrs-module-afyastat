          <label>Contact Names</label>
        </input>
        <input ref="/data/contact/phone">
          <label>Phone Number</label>
        </input>
        <input ref="/data/contact/phone_alternate">
          <label>Alternate Phone Number</label>
        </input>
        <select1 ref="/data/contact/role">

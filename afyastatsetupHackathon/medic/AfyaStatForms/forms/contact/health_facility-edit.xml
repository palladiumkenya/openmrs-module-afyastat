          </item>
          <item>
            <label ref="jr:itext('/data/contact/role/clinician:label')"/>
            <value>clinician</value>
          </item>
        </select1>
        <input ref="/data/contact/external_id">
          <label>External ID</label>
        </input>
        <input appearance="multiline" ref="/data/contact/notes">
          <label>Notes</label>
        </input>
        <group appearance="hidden" ref="/data/contact/meta">
          <label></label>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/data/health_facility">
      <label>New health facility</label>
      <input ref="/data/health_facility/name">
        <label>Name</label>
      </input>
      <input ref="/data/health_facility/external_id">
        <label>External ID</label>
      </input>
      <input appearance="multiline" ref="/data/health_facility/notes">
        <label>Notes</label>
      </input>
      <group appearance="hidden" ref="/data/health_facility/meta">

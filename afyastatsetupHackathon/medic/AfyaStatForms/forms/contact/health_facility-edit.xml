            <value>kp_case_manager</value>
          </item>
          <item>
            <label ref="jr:itext('/data/contact/role/kp_peer_educator:label')"/>
            <value>kp_peer_educator</value>
          </item>
          <item>
            <label ref="jr:itext('/data/contact/role/hts_provider:label')"/>
